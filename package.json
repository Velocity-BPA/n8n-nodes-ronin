{
  "name": "n8n-nodes-ronin",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Ronin blockchain providing 18 resources and 200+ operations for wallet management, NFT operations, Axie Infinity ecosystem, marketplace trading, Katana DEX, and Mavis Hub gaming platform.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-ronin.git"
  },
  "homepage": "https://velobpa.com",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "ronin",
    "blockchain",
    "axie-infinity",
    "axie",
    "nft",
    "web3",
    "cryptocurrency",
    "katana",
    "mavis",
    "slp",
    "axs",
    "gaming",
    "sky-mavis",
    "defi"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/RoninNetwork.credentials.js",
      "dist/credentials/RoninApi.credentials.js",
      "dist/credentials/MavisHub.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Ronin/Ronin.node.js",
      "dist/nodes/Ronin/RoninTrigger.node.js"
    ]
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "axios": "^1.6.2",
    "ethers": "^6.9.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0"
